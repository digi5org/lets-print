// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum OrderStatus {
  PENDING
  PROCESSING
  PRINTING
  COMPLETED
  CANCELLED
}

// Role model for RBAC system
model Role {
  id          String   @id @default(uuid())
  name        String   @unique // super_admin, business_owner, production_owner, client
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  users       User[]
  permissions RolePermission[]

  @@map("roles")
}

// Permission model for fine-grained access control
model Permission {
  id          String   @id @default(uuid())
  name        String   @unique // e.g., "create_product", "manage_users", "view_orders"
  description String?
  resource    String   // e.g., "products", "users", "orders"
  action      String   // e.g., "create", "read", "update", "delete"
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  roles       RolePermission[]

  @@map("permissions")
  @@index([resource, action])
}

// Many-to-many relationship between Roles and Permissions
model RolePermission {
  id           String     @id @default(uuid())
  roleId       String
  permissionId String
  createdAt    DateTime   @default(now())
  
  role         Role       @relation(fields: [roleId], references: [id], onDelete: Cascade)
  permission   Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)

  @@unique([roleId, permissionId])
  @@map("role_permissions")
  @@index([roleId])
  @@index([permissionId])
}

// Tenant model for multi-tenant support (for business_owner)
model Tenant {
  id          String   @id @default(uuid())
  name        String
  slug        String   @unique // URL-friendly identifier
  domain      String?  @unique // Custom domain if any
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  users          User[]
  tenantProducts TenantProduct[] // Products selected from master catalog
  materials      Material[]
  equipment      Equipment[]
  deliveries     Delivery[]
  tickets        Ticket[]

  @@map("tenants")
}

// Updated User model with RBAC and multi-tenant support
model User {
  id                    String    @id @default(uuid())
  email                 String    @unique
  password              String?   // Bcrypt hashed password (nullable for pending users)
  name                  String?
  roleId                String
  tenantId              String?   // For business_owner and client users
  department            String?   // Department for production staff
  isActive              Boolean   @default(true)
  emailVerified         Boolean   @default(false)
  verificationToken     String?   @unique // Token for email verification
  verificationTokenExp  DateTime? // Token expiration time
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  lastLoginAt           DateTime?
  
  role          Role      @relation(fields: [roleId], references: [id], onDelete: Restrict)
  tenant        Tenant?   @relation(fields: [tenantId], references: [id], onDelete: SetNull)
  orders        Order[]
  designs       Design[]
  activityLogs  ActivityLog[]
  createdTickets   Ticket[]        @relation("TicketCreator")
  assignedTickets  Ticket[]        @relation("TicketAssignee")
  ticketComments   TicketComment[]

  @@map("users")
  @@index([roleId])
  @@index([tenantId])
  @@index([email])
  @@index([verificationToken])
}

// Master Product Catalog (managed by SuperAdmin and Production Owner)
model Product {
  id              String   @id @default(uuid())
  name            String
  description     String?  @db.Text
  category        String
  price           Float
  imageUrl        String?
  specifications  Json?    // Additional product specs (size, material, etc.)
  isActive        Boolean  @default(true) // SuperAdmin can deactivate products globally
  createdBy       String?  // User ID who created the product
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  orderItems      OrderItem[]
  tenantProducts  TenantProduct[] // Junction table for business owner product selection

  @@map("products")
  @@index([category])
  @@index([isActive])
}

// Junction table: Business Owner's product selection from master catalog
model TenantProduct {
  id          String   @id @default(uuid())
  tenantId    String
  productId   String
  isActive    Boolean  @default(true) // Business owner controls visibility
  customPrice Float?   // Optional: Business owner can set custom pricing
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  tenant      Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  product     Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([tenantId, productId]) // One product per tenant
  @@map("tenant_products")
  @@index([tenantId])
  @@index([productId])
  @@index([isActive])
}

model Order {
  id            String      @id @default(uuid())
  userId        String
  tenantId      String?
  status        OrderStatus @default(PENDING)
  totalAmount   Float
  notes         String?     @db.Text
  priority      String?     @default("Medium")
  dueDate       DateTime?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  
  user          User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  orderItems    OrderItem[]
  deliveries    Delivery[]

  @@map("orders")
  @@index([userId])
  @@index([tenantId])
  @@index([status])
}

model OrderItem {
  id         String   @id @default(uuid())
  orderId    String
  productId  String
  designId   String?
  quantity   Int
  price      Float
  createdAt  DateTime @default(now())
  
  order      Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product    Product  @relation(fields: [productId], references: [id], onDelete: Restrict)
  design     Design?  @relation(fields: [designId], references: [id], onDelete: SetNull)

  @@map("order_items")
  @@index([orderId])
  @@index([productId])
  @@index([designId])
}

model Design {
  id          String   @id @default(uuid())
  userId      String
  name        String
  fileUrl     String
  fileType    String
  fileSize    Int
  thumbnailUrl String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  orderItems  OrderItem[]

  @@map("designs")
  @@index([userId])
}

// Material model for inventory management
model Material {
  id            String   @id @default(uuid())
  name          String
  category      String   // Paper, Ink, Vinyl, etc.
  quantity      Float
  unit          String   // sheets, yards, cartridges, etc.
  reorderLevel  Float
  costPerUnit   Float
  supplier      String?
  description   String?  @db.Text
  tenantId      String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  tenant        Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@map("materials")
  @@index([tenantId])
  @@index([category])
}

// Equipment model for production equipment tracking
model Equipment {
  id                String   @id @default(uuid())
  name              String
  equipmentType     String   // Printer, Cutter, Laminator, etc.
  model             String?
  serialNumber      String?
  status            String   @default("Operational") // Operational, Maintenance Required, Under Repair, Out of Service
  lastMaintenance   DateTime?
  nextMaintenance   DateTime?
  maintenanceNotes  String?  @db.Text
  purchaseDate      DateTime?
  warrantyExpiry    DateTime?
  supplier          String?
  cost              Float?
  location          String?
  tenantId          String
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  tenant            Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  maintenanceLogs   EquipmentMaintenance[]

  @@map("equipment")
  @@index([tenantId])
  @@index([status])
}

// Equipment Maintenance Log
model EquipmentMaintenance {
  id            String   @id @default(uuid())
  equipmentId   String
  maintenanceType String // Scheduled, Repair, Emergency
  description   String   @db.Text
  cost          Float?
  performedBy   String?
  performedAt   DateTime @default(now())
  nextDueDate   DateTime?
  notes         String?  @db.Text
  createdAt     DateTime @default(now())

  equipment     Equipment @relation(fields: [equipmentId], references: [id], onDelete: Cascade)

  @@map("equipment_maintenance")
  @@index([equipmentId])
  @@index([performedAt])
}

// Delivery model for order delivery tracking
model Delivery {
  id                  String   @id @default(uuid())
  orderId             String
  tenantId            String
  customerName        String
  customerPhone       String?
  deliveryAddress     String   @db.Text
  status              String   @default("Scheduled") // Scheduled, In Transit, Out for Delivery, Delivered, Failed
  driverName          String?
  driverPhone         String?
  vehicleNumber       String?
  trackingNumber      String   @unique
  estimatedDelivery   DateTime?
  actualDelivery      DateTime?
  notes               String?  @db.Text
  deliveryProof       String?  // Photo URL or signature
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  order               Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  tenant              Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@map("deliveries")
  @@index([tenantId])
  @@index([orderId])
  @@index([status])
  @@index([trackingNumber])
}

// Ticket model for support and issue tracking
model Ticket {
  id              String         @id @default(uuid())
  ticketNumber    String         @unique // e.g., TKT-001
  title           String
  description     String?        @db.Text
  priority        String         @default("Medium") // Low, Medium, High, Critical
  status          String         @default("Open") // Open, In Progress, Resolved, Closed
  category        String         // Quality, Delivery, Billing, Design, Technical, Other
  customerId      String?        // Optional reference to customer
  customerName    String?        // Customer name if not linked to user
  assignedTo      String?        // User ID of assigned staff
  tenantId        String
  createdBy       String
  resolvedAt      DateTime?
  closedAt        DateTime?
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  
  tenant          Tenant         @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  creator         User           @relation("TicketCreator", fields: [createdBy], references: [id])
  assignedUser    User?          @relation("TicketAssignee", fields: [assignedTo], references: [id])
  comments        TicketComment[]

  @@map("tickets")
  @@index([tenantId])
  @@index([status])
  @@index([priority])
  @@index([category])
  @@index([assignedTo])
  @@index([createdBy])
}

// Ticket Comment model for ticket communication
model TicketComment {
  id          String   @id @default(uuid())
  ticketId    String
  userId      String
  comment     String   @db.Text
  isInternal  Boolean  @default(false) // Internal notes vs customer-visible
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  ticket      Ticket   @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  user        User     @relation(fields: [userId], references: [id])

  @@map("ticket_comments")
  @@index([ticketId])
  @@index([userId])
}

// Activity Log model for tracking system activities
model ActivityLog {
  id          String   @id @default(uuid())
  userId      String?  // Nullable for system actions
  action      String   // e.g., "user_created", "subscription_upgraded", "system_backup"
  entityType  String?  // e.g., "user", "business", "subscription", "system"
  entityId    String?  // ID of the affected entity
  entityName  String?  // Name/description of the affected entity
  metadata    Json?    // Additional data about the action
  ipAddress   String?
  userAgent   String?
  createdAt   DateTime @default(now())
  
  user        User?    @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@map("activity_logs")
  @@index([userId])
  @@index([entityType])
  @@index([createdAt])
}
